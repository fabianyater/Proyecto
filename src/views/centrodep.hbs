<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-widget widget-user">
                <div class="widget-user-header" style="background: #074558;">
                </div>
                <div class="widget-user-image">
                    <img class="img-circle"
                        src="https://demo.bloguero-ec.com/login-mvc-php-mysql-ajax/view/bootstrap-default/img/user.png"
                        alt="User Avatar">
                </div>
                <div class="box-footer">
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3>Información</h3>
                </div>
                <div class="box-body">
                    <strong><i class="margin-r-5"></i> General</strong>
                    {{#each micentro}}
                    <ul class="list-group list-group-flush">
                        <li class="card-text list-group-item">{{nombre}}</li>
                        <li class="card-text list-group-item">{{direccion}}</li>
                        <li class="card-text list-group-item">{{rut}}</li>
                        <li class="card-text list-group-item">{{correo}}</li>
                        <li class="card-text list-group-item">{{tel}}</li>
                    </ul>
                    {{/each}}
                    <hr>
                    <strong><i class="margin-r-5"></i> Descripción</strong>
                    <div>
                        {{descripcion}}
                    </div>
                    <hr>
                    <a href="" class="btn btn-primary">Editar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3>Detalles</h3>
                </div>
                <div class="box-body">
                    <strong><i class="margin-r-5"></i> Servicios</strong>
                    <ul class="tags">
                        {{#each srvs}}
                        <li><a href="#" class="tag">{{nombres}}</a></li>
                        {{/each}}
                    </ul>
                    <a href="/addServices" class="btn btn-primary">Agregar servicio</a>
                    <hr>
                    <strong><i class="margin-r-5"></i> Deportes</strong>
                    <ul class="tags">
                        {{#each dtes}}
                        <li><a href="#" class="tag">{{nombre}}</a></li>
                        {{/each}}
                    </ul>
                    <a href="" class="btn btn-primary">Agregar deporte</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mx-auto">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3>Canchas</h3>
            </div>
            <div class="box-body">
                Aquí van las canchas que pertenecen a este centro deportivo
            </div>
        </div>
    </div>
    </div>
</section>